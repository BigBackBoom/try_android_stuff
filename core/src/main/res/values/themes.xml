<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Try_android_stuff" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.try_android_stuff.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.try_android_stuff.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.try_android_stuff.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.try_android_stuff.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.try_android_stuff.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.try_android_stuff.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.try_android_stuff.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.try_android_stuff.Body2</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>

    </style>

    <style name="Theme.Try_android_stuff.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Try_android_stuff.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Try_android_stuff.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
